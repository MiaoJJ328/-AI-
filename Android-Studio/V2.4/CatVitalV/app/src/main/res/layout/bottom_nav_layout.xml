<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/blue"
    >


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/iv_robot"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_launcher_nav_robot_gray"/>


        <TextView
            android:id="@+id/tv_robot"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="AI助手"
            android:textSize="20dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/iv_feed"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/selector_bg_feed"/>


        <TextView
            android:id="@+id/tv_feed"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="喂食"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/iv_health"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/selector_bg_health"/>


        <TextView
            android:id="@+id/tv_health"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="健康"
            android:textSize="20dp" />
    </LinearLayout>
</LinearLayout>